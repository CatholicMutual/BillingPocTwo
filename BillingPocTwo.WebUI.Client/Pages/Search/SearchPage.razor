    private void OnSearchTermChanged(ChangeEventArgs e)
    {
        // Clear EntityDetails when the search term changes
        if (e.Value is string newValue && newValue != SearchTerm)
        {
            SearchResults = null;
        }
    }

    // private void CloseModal()
